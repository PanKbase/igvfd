{
    "title": "Human Organ Donor",
    "$id": "/profiles/human_donor.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A human donor of any biosample, including cell lines. Submission of any sample originating from a human donor requires submission of information about the relevant donor. For example, submission of the donor of K562 is a prerequisite for submission of any K562 cell line samples. The schema has a tiered structure for field requirements:Tier 0 fields are strictly required: age,  center_donor_id, lab, living_donor, and taxa. Tier 1 fields are required: gender, bmi, diabetes_status, and diabetes_status_description. Tier 2 fields are desired but not mandatory: rrid, ethnicities, hba1c, diabetes_status_hba1c, glucose_lowering_therapy, hospital_stay, award,donation_type, and cause_of_death. Tier 3 fields are optional but valuable for comprehensive data: these include autoantibody results, genetic information, tissue availability, and other metadata. The inclusion of as many fields as possible is recommended for the most complete biological context.",
    "type": "object",
    "required": [
        "center_donor_id",
        "lab",
        "age",
        "living_donor",
        "taxa"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "donor.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/publication_identifiers"
        },
        {
            "$ref": "mixins.json#/publication_data"
        },
        {
            "$ref": "mixins.json#/taxa"
        },
        {
            "$ref": "mixins.json#/release_timestamp"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "shared_dependencies.json#/accession_status"
        ]
    },
    "properties": {
        "schema_version": {
            "default": "17"
        },
        "related_donors": {
            "title": "Related Donors",
            "description": "Familial relations of this donor also in PanKbase .",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Related Donor",
                "description": "Familial relation of this donor.",
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "donor",
                    "relationship_type"
                ],
                "properties": {
                    "donor": {
                        "title": "Related Donor Identifier",
                        "description": "An identifier for the related donor.",
                        "type": "string",
                        "linkTo": "HumanDonor"
                    },
                    "relationship_type": {
                        "title": "Relationship Type",
                        "description": "A descriptive term for the related donor’s relationship to this donor.",
                        "comment": "List of enums comes from http://genealogy-quest.com/glossary-terms/relationship-terms/.",
                        "type": "string",
                        "enum": [
                            "aunt",
                            "child",
                            "first cousin once removed",
                            "first cousin",
                            "fraternal twin",
                            "grandparent",
                            "half-sibling",
                            "niece",
                            "nephew",
                            "parent",
                            "paternal twin",
                            "sibling",
                            "second cousin",
                            "uncle"
                        ]
                    }
                }
            },
            "submissionExample": {
                "appscript": "[{\"donor\": \"john-doe:donor02\", \"relationship_type\": \"child\"}, {\"donor\": \"john-doe:donor03\", \"relationship_type\": \"sibling\"}]",
                "igvf_utils": "{\"donor\": \"john-doe:donor02\", \"relationship_type\": \"child\"}, {\"donor\": \"john-doe:donor03\", \"relationship_type\": \"sibling\"}"
            }
        },
        "ethnicities": {
            "title": "Self-Reported Ethnicity",
            "description": "Self-Reported Ethnicity of the donor.",
            "comment": "We use http://bioportal.bioontology.org/ontologies/HANCESTRO as a template for the enum list of ethnicities.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "African American",
                    "African Caribbean",
                    "Arab",
                    "Asian",
                    "Black",
                    "Black African",
                    "White",
                    "Chinese",
                    "Colombian",
                    "Dai Chinese",
                    "Esan",
                    "Eskimo",
                    "European",
                    "Gambian",
                    "Han Chinese",
                    "Hispanic",
                    "Indian",
                    "Japanese",
                    "Kinh Vietnamese",
                    "Luhya",
                    "Maasai",
                    "Mende",
                    "Native Hawaiian",
                    "Pacific Islander",
                    "Puerto Rican",
                    "Yoruba"
                ]
            },
            "submissionExample": {
                "appscript": "[\"Japanese\", \"European\"]",
                "igvf_utils": "Japanese, European"
            }
        },
        "genetic_ethnicities": {
            "title": "Predicted Genetic Ancestry",
            "description": "Inferred ancestry of the donor from genetic analysis, including optional percentage values for each ethnicity.",
            "comment": "We use http://bioportal.bioontology.org/ontologies/HANCESTRO as a template for the enum list of ethnicities.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "ethnicity": {
                        "type": "string",
                        "enum": [
                           "African-American",
                           "African-Caribbean",
                           "Admixed-American",
                           "African",
                           "Arab",
                           "Asian",
                           "Black",
                           "Black-African",
                           "White",
                           "Chinese",
                           "Colombian",
                           "Dai-Chinese",
                           "East-Asian",
                           "Esan",
                           "Eskimo",
                           "European",
                           "Gambian",
                           "Han-Chinese",
                           "Hispanic",
                           "Indian",
                           "Japanese",
                           "Kinh-Vietnamese",
                           "Luhya",
                           "Maasai",
                           "Mende",
                           "Native-Hawaiian",
                           "Pacific-Islander",
                           "Puerto-Rican",
                           "South-Asian",
                           "Yoruba"
                         ]
                    },
                    "percentage": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100,
                        "description": "Optional percentage of the genetic ancestry for the specified ethnicity."
                       }
                    },
                    "required": ["ethnicity"]
            },
            "submissionExample": {
                "appscript": "[{\"ethnicity\": \"Japanese\", \"percentage\": 60}, {\"ethnicity\": \"European\", \"percentage\": 40}]",
                "igvf_utils": "Japanese (60%), European (40%)"
            }
        },
        "data_available": {
            "title": "Data Available",
            "description": "A list of datasets available for the donor, each with tissue and a corresponding link to access the dataset.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "dataset": {
                        "type": "string",
                        "enum": [
                            "Genotyping",
                            "Function",
                            "Imaging",
                            "Morphology",
                            "HLA_typing",
                            "BCRseq",
                            "CITEseq",
                            "Flow_cytometry",
                            "histology",
                            "scMultiome",
                            "TCRseq",
                            "scRNAseq",
                            "snATAC-seq",
                            "RNAseq",
                            "snATACseq",
                            "ATAC-seq",
                            "CyTof",
                            "mass_spec",
                            "imaging_mass_spec",
                            "CODEX",
                            "WGBS"
                        ]
                    },
        "dataset_tissue": {
             "type": "string",
             "enum": [
                            "Pancreas",
                            "-",
                            "Islet",
                            "Spleen",
                            "Lymph",
                            "Peripheral_blood",
                            "Thymus"
                        ],
                        "description": "Dataset Tissue"
                    },
           "dataset_link": {
                "type": "string",
                "description": "Dataset Link which is optional"
                    }
                    },
            "required": ["dataset", "dataset_tissue"]
            }
        },
        "living_donor": {
            "title": "Living Donor",
            "description": "Living Donor",
            "type": "boolean",
            "submissionExample": {
                "appscript": false,
                "igvf_utils": false
            }
        },
        "family_history_of_diabetes": {
            "title": "Family History of Diabetes",
            "description": "Family History of Diabetes",
            "type": "string",
            "enum": ["true", "false", "NA", "unknown"],
            "submissionExample": {
                "appscript": "false",
                "igvf_utils": "false"
            }
        },
        "family_history_of_diabetes_relationship": {
            "title": "Family History of Diabetes Relationship",
            "type": "array",
            "description": "Family History of Diabetes Relationship.",
            "uniqueItems": true,
            "items": {
                "title": "Family History of Diabetes Relationship",
                "description": "Family History of Diabetes Relationship",
                "type": "string"
            }
        },
        "rrid": {
            "title": "RRID",
            "description": "Research Unique Identifier. PanKbase will only take donors with RRID",
            "type": "string",
            "pattern": "^RRID:[A-Z]{4}\\d{8}$",
            "submissionExample": {
                "appscript": "RRID:SAMN19776455",
                "igvf_utils": "RRID:SAMN19776455"
            }
        },
        "pancreas_tissue_available": {
            "title": "Pancreas Tissue Available",
            "description": "Pancreas tissue is available for research or analysis",
            "type": "boolean",
            "submissionExample": {
                "appscript": true,
                "igvf_utils": true
            }
        },
        "center_donor_id": {
            "title": "Center Donor ID",
            "description": "Donor center ID identifier for cross-referencing",
            "type": "string",
            "submissionExample": {
                "appscript": "SAMN19776455",
                "igvf_utils": "SAMN19776455"
            }
        },
        "biological_sex": {
            "title": "Genetic Sex",
            "description": "Inferred biological sex derived from genomic data",
            "type": "string",
            "enum": [
                "male",
                "female"
            ],
            "submissionExample": {
                "appscript": "female",
                "igvf_utils": "female"
            }
        },
        "t1d_stage": {
            "title": "T1D stage",
            "description": "T1D stage",
            "type": "string",
            "enum": [
                "At-risk: Single or transient autoantibody, normal glucose level",
                "Stage 1: Two or more autoantibodies, normal glucose metabolism level",
                "Stage 2: Two or more autoantibodies, dysglycemia (e.g., HbA1c ≥ 5.7%)",
		"Stage 3: One or more autoantibodies and diagnostic hyperglycemia or T1D diagnosis",
		"No stage",
		"no sufficient information to derive"
            ],
            "submissionExample": {
                "appscript": "No stage",
                "igvf_utils": "No stage"
            }
        },
        "derived_diabetes_status": {
            "title": "Derived diabetes status",
            "description": "Derived diabetes status.Diabetes is diagnosed at an A1C of greater than or equal to 6.5%. https://diabetes.org/about-diabetes/diagnosis#:~:text=and%20cardiovascular%20disease.-,Symptoms,of%20140",
            "type": "string",
            "enum": [
                "Normal",
		"Prediabetes",
		"Diabetes"
            ],
            "submissionExample": {
                "appscript": "Normal",
                "igvf_utils": "Normal"
            }
        },
        "age": {
            "title": "Age (years)",
            "description": "Age in years",
            "type": "number",
            "submissionExample": {
                "appscript": 21.03,
                "igvf_utils": 21.03
            }
        },
        "bmi": {
            "title": "BMI",
            "description": "Body mass index (Kg/m2)",
            "type": "number",
            "submissionExample": {
                "appscript": 21.03,
                "igvf_utils": 21.03
            }
        },
        "diabetes_duration": {
            "title": "Diabetes Duration (years)",
            "description": "Diabetes Duration in years",
            "type": "string",
            "submissionExample": {
                "appscript": "21.03-22",
                "igvf_utils": "21.03-22"
            }
        },
        "diabetes_status": {
            "title": "Diabetes Status",
            "description": "Diabetes status T1D,T2D,MODY, etc. MONDO ontology term",
            "type": "array",
            "uniqueItems": true,
            "default": [],
            "items": {
                "title": "Diabetes Status",
                "comment": "See phenotype_term.json for available identifiers.",
                "type": "string",
                "linkTo": "PhenotypeTerm"
            },
            "submissionExample": {
                "appscript": ["/phenotype-terms/MONDO_0010894/", "/phenotype-terms/MONDO_0009100/"],
                "igvf_utils": "/phenotype-terms/MONDO_0010894/, /phenotype-terms/MONDO_0009100/"
            }
        },
        "diabetes_status_description": {
            "title": "Description of diabetes status",
            "description": "Description of diabetes status",
            "type": "string",
            "enum": [
                "type 1 diabetes",
                "type 2 diabetes",
                "gestational diabetes",
                "maturity onset diabetes of the young (MODY)",
                "monogenic diabetes",
                "neonatal diabetes",
                "wolfram syndrome",
                "Alström syndrome",
                "latent autoimmune diabetes in adults (LADA)",
                "type 3c diabetes",
                "steroid-induced diabetes",
                "cystic fibrosis-related diabetes",
                "control without diabetes",
                "diabetes unspecified"
            ],
            "submissionExample": {
                "appscript": "control without diabetes",
                "igvf_utils": "control without diabetes"
            }
        },
        "hba1c": {
            "title": "HbA1C (percentage)",
            "description": "The percentage measurement of HbA1c, which reflects the average blood glucose levels over the past 2-3 months.  If not available, 'NA'",
            "type": "number",
            "submissionExample": {
                "appscript": 5.5,
                "igvf_utils": 5.5
            }
        },
        "donation_type": {
            "title": "Donation Type",
            "description": "The type of organ donation, categorized as DCD, NDD, or MAID",
            "type": "string",
            "enum": [
                "Donation after Circulatory Death",
                "Donation after Brain Death",
                "Natural Death Donation",
                "Medical Assistance in Dying"
            ],
            "submissionExample": {
                "appscript": "Donation after Circulatory Death",
                "igvf_utils": "Donation after Circulatory Death"
            }
        },
        "cause_of_death": {
            "title": "Cause of Death",
            "description": "The primary medical condition or event that led to the patient’s death",
            "type": "string",
            "submissionExample": {
                "appscript": "unspecified",
                "igvf_utils": "unspecified"
            }
        },
        "c_peptide": {
            "title": "C-Peptide (ng/ml)",
            "description": "The concentration of C-Peptide in the blood, a marker used to assess insulin production and pancreatic function",
            "type": "number",
            "submissionExample": {
                "appscript": 1.8,
                "igvf_utils": 1.8
            }
        },
        "aab_gada": {
            "title": "AAB GADA POSITIVE",
            "description": "The presence of autoantibodies against GADA",
            "type": "boolean",
            "submissionExample": {
                "appscript": false,
                "igvf_utils": false
            }
        },
        "aab_gada_assay": {
            "title": "AAB GADA assay",
            "description": "Assays used to measure autoantibodies against GADA",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
                      }
        },
        "aab_gada_value": {
            "title": "AAB GADA value (unit/ml)",
            "description": "AAB GADA value (unit/ml)",
            "type": "number",
            "submissionExample": {
                "appscript": 203,
                "igvf_utils": 203
            }
        },
        "aab_iaa": {
            "title": "AAB IAA POSITIVE",
            "description": "The presence of autoantibodies against IAA",
            "type": "boolean",
            "submissionExample": {
                "appscript": false,
                "igvf_utils": false
            }
        },
        "aab_iaa_assay": {
            "title": "AAB IAA assay",
            "description": "Assays used to measure autoantibodies against IAA",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
                      }
        },
        "aab_iaa_value": {
            "title": "AAB IAA value (unit/ml)",
            "description": "AAB IAA value (unit/ml)",
            "type": "number",
            "submissionExample": {
                "appscript": 203,
                "igvf_utils": 203
            }
        },
        "aab_ia2": {
            "title": "AAB IA2 POSITIVE",
            "description": "The presence of autoantibodies against IA2",
            "type": "boolean",
            "submissionExample": {
                "appscript": false,
                "igvf_utils": false
            }
        },
        "aab_ia2_assay": {
            "title": "AAB IA2 assay",
            "description": "Assays used to measure autoantibodies against IA2",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
                      }
        },
        "aab_ia2_value": {
            "title": "AAB IA2 value (unit/ml)",
            "description": "AAB IA2 value (unit/ml)",
            "type": "number",
            "submissionExample": {
                "appscript": 0,
                "igvf_utils": 0
            }
        },
        "aab_znt8": {
            "title": "AAB ZNT8 POSITIVE",
            "description": "The presence of autoantibodies against ZNT8",
            "type": "boolean",
            "submissionExample": {
                "appscript": false,
                "igvf_utils": false
            }
        },
        "aab_znt8_assay": {
            "title": "AAB ZNT8 assay",
            "description": "Assays used to measure autoantibodies against ZNT8",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
                      }
        },
        "aab_znt8_value": {
            "title": "AAB ZNT8 value (unit/ml)",
            "description": "AAB ZNT8 value (unit/ml)",
            "type": "number",
            "submissionExample": {
                "appscript": 0,
                "igvf_utils": 0
            }
        },
        "hla_typing": {
            "title": "HLA typing",
            "description": "Series of comma-separated values describing HLA types as: class, locus, allele1, allele2, method",
            "comment": "example: 'A,1,11:01,24:02,NGS', 'B,1,15:01,40:01,NGS', 'C,1,03:03,03:04,NGS'",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "HLA typing",
                "description": "Series of comma-separated values describing HLA types as: class, locus, allele1, allele2, method",
                "type": "string"
            }
        },
        "other_tissues_available": {
            "title": "Other Tissues Available",
            "description": "Tissues obtained from the donor",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Sample Term",
                "comment": "See sample_term.json for available identifiers.",
                "type": "string",
                "linkTo": "SampleTerm"
            },
            "submissionExample": {
                "appscript": "[\"/sample-terms/UBERON_0001388/\"]",
                "igvf_utils": "/sample-terms/UBERON_0001388/"
            }
        },
        "taxa": {
            "enum": [
                "Homo sapiens"
            ],
            "submissionExample": {
                "appscript": "Homo sapiens",
                "igvf_utils": "Homo sapiens"
            }
        },
        "hospital_stay": {
            "title": "Hospital Stay (hours)",
            "description": "The total number of hours the patient was hospitalized",
            "type": "number",
            "submissionExample": {
                "appscript": 1.5,
                "igvf_utils": 1.5
            }
        },
        "other_theraphy": {
            "title": "Other Therapy",
            "description": "Details the type of therapy or medication regimen the patient is on other than to manage blood glucose levels.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
                      }
        },
        "human_donor_identifiers": {
            "title": "Human Donor Identifiers",
            "type": "array",
            "description": "Identifiers of this human donor.",
            "uniqueItems": true,
            "permission": "admin_only",
            "items": {
                "title": "Human Donor Identifier",
                "description": "An identifier of this human donor.",
                "comment": "Cell line donors should specify as so. e.g. 'K562 cell line donor'.",
                "type": "string"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "dbxrefs",
        "taxa",
        "ethnicities",
        "human_donor_identifiers",
        "diabetes_status_description",
        "phenotypic_features.feature.term_name",
        "submitted_by.title"
    ],
    "exact_searchable_fields": [
        "@type",
        "related_donors.donor.accession"
    ],
    "changelog": "/profiles/changelogs/human_donor.md"
}
